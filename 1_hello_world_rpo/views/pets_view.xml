<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- views -->
     <!-- Vista tipo Tree -->
    <record id="view_tree_pets" model="ir.ui.view">
        <field name="name">pets.tree</field>
        <field name="model">pets.rpo</field>
        <field name="arch" type="xml">
           <tree>
                    <field name="name" optional="show"/>
                    <field name="age"/>
                    <field name="color"/>
                    <field name="type"/>
           </tree>
        </field>
    </record>

    <!-- Una vista Form -->
     <record id="view_form_pets" model="ir.ui.view">
        <field name="name">pets.form</field>
        <field name="model">pets.rpo</field>
        <field name="arch" type="xml">
            <form string="Pets List">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                         <group>
                            <field name="color"/>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definiendo Action  -->
    <record model="ir.actions.act_window" id="action_pets">
        <field name="name">pets</field>
        <field name="res_model">pets.rpo</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"  ref="view_tree_pets" />
    </record>

    <!--  Conformando menu -->
        <menuitem id="pets_menu" name="PETS" web_icon="stock,static/description/icon.png"
                  sequence="10"/>

        <menuitem id="submenu_pets_menu" name="Pets"
                  sequence="10" parent="pets_menu"/>

        <menuitem id="submenu_pets_action" name="Pets"
                  sequence="10" parent="submenu_pets_menu" action="action_pets"/>
</odoo>
