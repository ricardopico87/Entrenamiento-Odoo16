<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- views -->
     <!-- Modificando vistas heredadas -->

     <record id="view_hello_world_rpo_inh_tree" model="ir.ui.view">
        <field name="name">view.hello.world.rpo.inh.tree</field>
        <field name="model">pets.rpo</field>
        <field name="inherit_id" ref="11_hello_world_rpo.view_tree_pets"/>
        <field name="arch" type="xml">
            <!--adicionando el campo booleano "vacunado" de tipo booleano luego del campo color-->
            <xpath expr="//field[@name='color']" position="after">
                <field name="vaccinated" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <record id="view_hello_world_rpo_inh_form" model="ir.ui.view">
        <field name="name">view.hello.world.rpo.inh.form</field>
        <field name="model">pets.rpo</field>
        <field name="inherit_id" ref="1_hello_world_rpo.view_form_pets"/>
        <field name="arch" type="xml">
            <!--adicionando el campo booleano "vacunado" de tipo booleano luego del campo color-->
            <xpath expr="//field[@name='color']" position="after">
                <field name="vaccinated" widget="boolean_toggle"/>
            </xpath>
            <!--reemplanzando el campo Edad por Tiempo Adoptado, al hacer esto hay que quitar el campo "age" como requerido en el modelo, o da error-->
             <xpath expr="//field[@name='age']" position="replace">
                <field name="adopted_time"/>
             </xpath>

            <!--esto es una manera de ocultar campos-->
            <!--<field name="type" position="replace" />-->

        </field>
    </record>


</odoo>